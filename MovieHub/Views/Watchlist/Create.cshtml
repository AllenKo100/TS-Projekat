@model MovieHub.Models.Watchlist

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
}

<h1>Nova watchlista</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <label>Odaberi filmove</label>
            <br />       
                @Html.DropDownList("FilmID", (MultiSelectList)ViewBag.Filmovi, new { id = "md", multiple = "multiple" })            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad</a>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#md").chosen({ width: "100%" });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
