@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="body">

    
    <!-- home -->
    <section class="home">
        <!-- home bg -->
        <div class="owl-carousel home__bg">
            <div class="item home__cover" data-bg="/img/home/home__bg.jpg"></div>
            <div class="item home__cover" data-bg="/img/home/home__bg2.jpg"></div>
            <div class="item home__cover" data-bg="/img/home/home__bg3.jpg"></div>
            <div class="item home__cover" data-bg="/img/home/home__bg4.jpg"></div>
        </div>
        <!-- end home bg -->

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="home__title"><b>POPULARNI</b> FILMOVI</h1>
                    <button class="home__nav home__nav--prev" type="button">
                        <i class="icon ion-ios-arrow-round-back"></i>
                    </button>
                    <button class="home__nav home__nav--next" type="button">
                        <i class="icon ion-ios-arrow-round-forward"></i>
                    </button>
                </div>

                <div class="col-12">
                    <div class="owl-carousel home__carousel">
                        @foreach (var item in Model.Popularni)
                        {
                            <div class="item">
                                <!-- card -->

                                <div class="card card--big">
                                    <div class="card__cover">
                                        <img src=@Html.DisplayFor(modelItem => item.Poster) alt="">
                                        <a asp-controller="Film" asp-action="Details" asp-route-id="@item.FilmID"  class="card__play">
                                            <i class="icon ion-ios-play"></i>
                                        </a>
                                    </div>
                                    <div class="card__content">
                                        <h3 class="card__title"><a asp-controller="Film" asp-action="Details" asp-route-id="@item.FilmID" >@Html.DisplayFor(modelItem => item.Naziv)</a></h3>
                                        <span class="card__category">
                                            @if (item.FilmZanr != null)
                                            {
                                                    <a href="#">@item.FilmZanr.ElementAt(0).Zanr.Naziv</a>
                                            }
                                        </span>
                                        <span class="card__rate"><i class="icon ion-ios-star"></i>@Html.DisplayFor(modelItem => item.Ocjena)</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
