@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Obriši Lične podatke";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 style="color:white">@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Brisanjem podataka briše se i vaš nalog, da li ste sigurni da želite obrisati nalog?</strong>
    </p>
</div>

<div>
    <form style="color:white" id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Izvriši moje podatke i zatvori nalog</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}